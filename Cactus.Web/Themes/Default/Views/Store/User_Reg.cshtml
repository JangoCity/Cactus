@{
    Layout = "~/Themes/Default/Views/Shared/_StoreLayout.cshtml";
}
<div class="pure-u-1 pure-u-md-1 detail">
    <div class="pure-g user-main">
        <div class="pure-u-1 pure-sm-1 pure-u-md-1">
            <div class="user-content">
                <!--form begin-->
                <form class="pure-form user-reg">
                    <div class="pure-u-1">
                        <fieldset class="pure-group">
                            <input type="text" class="pure-input-1" placeholder="邮箱/手机号">
                            <input type="text" class="pure-input-1" placeholder="密码">
                            <input type="text" class="pure-input-1" placeholder="邀请码">
                        </fieldset>
                    </div>
                    <div class="pure-g user-vcode">
                        <div class=" pure-u-1-2">
                            <input type="text" placeholder="验证码" class="pure-input-1 user-vcode-t">
                        </div>
                        <div class="pure-u-1-2">
                            <img src="/Content/Store/img/VCode.gif" class="pure-img user-vcode-t" />
                        </div>
                    </div>
                    <button type="button" class="pure-button pure-input-1 pure-button-primary">注册</button>
                </form>
                <!--form end-->
            </div>
        </div>
    </div>
</div>
